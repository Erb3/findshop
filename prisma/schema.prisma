generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Shop {
  id              String    @id @default(uuid()) @unique
  name            String
  description     String?
  owner           String?
  computerID      Int
  multiShop       Int?
  softwareName    String?
  softwareVersion String?
  lastSeen        DateTime  @default(now())
  locations       Location[]
  items           Item[]
}

model Location {
  id          String     @id @default(uuid()) @unique
  main        Boolean
  x           Int?
  y           Int?
  z           Int?
  description String?
  dimension   Int?

  shop        Shop @relation(fields: [shopID], references: [id], onDelete: Cascade)
  shopID      String
}

model Item {
  id                  String @id @default(uuid())

  name                String
  displayName         String
  nbtHash             String?
  description         String?
  dynamicPrice        Boolean
  madeOnDemand        Boolean
  stock               Int?
  requiresInteraction Boolean
  shopBuysItem        Boolean
  noLimit             Boolean

  prices              Price[]

  shop                Shop    @relation(fields: [shopID], references: [id], onDelete: Cascade)
  shopID              String
}

model Price {
    id                 String @id @default(uuid())
    value              Float
    currency           String
    address            String
    requiredMeta       String?

    item               Item @relation(fields: [itemID], references: [id], onDelete: Cascade)
    itemID             String
}